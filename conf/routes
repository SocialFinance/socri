# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           @controllers.Index.index()
GET     /home                       @controllers.Index.home()

GET     /login                      @controllers.Auth.get()
POST    /login                      @controllers.Auth.login()
GET     /logout                     @controllers.Auth.logout()
POST    /logout                     @controllers.Auth.logout()

GET     /signup                     @controllers.Signup.get()
POST    /signup                     @controllers.Signup.post()

GET     /jobs                       @controllers.Jobs.get()
GET     /lending                    @controllers.Lending.get()
GET     /social                     @controllers.Social.get()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
